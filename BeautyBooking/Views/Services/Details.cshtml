@model Service

@{
    ViewData["Title"] = "Про послугу";
}

<link rel="stylesheet" href="~/css/services_page_style.css">

<section class="header">
    <div style="padding: 1% 5%">
        <a href="/" class="header-text" style="font-size: 24pt; color: white; text-decoration: none;">
            <span class="icon-g-bar-logo" width="130px">BeautyBooking</span>
        </a>
    </div>
</section>

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 details-header>Інформація про послугу</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control" value="@Model.Duration" readonly />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" value="@Model.Price грн" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a class="btn btn-outline-secondary btn-show-all" asp-action="Index">Всі послуги</a>
                </div>
            </div>
        </div>
    </div>
</div>