@using BeautyBooking.Data.ViewModels;

@model EditProfileVM;

@{
    ViewData["Title"] = "Особистий кабінет";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css'>
<link rel="stylesheet" type="text/css"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js">
<link rel="stylesheet" type="text/css" href="~/css/account_page_style.css">

<div class="container rounded bg-white mt-5 mb-5">
    
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="row">
            <form asp-action="Edit" class="editForm">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5 profile-picture" width="150px"
                            src="../img/360_F_97000908_wwH2goIihwrMoeV9QF3BW6HtpsVFaNVM.jpg">
                        <span class="font-weight-bold">Оберіть фото профілю:</span>
                        <p class="fieldset avatar">
                            <input asp-for="ProfilePhotoURL" type="file" id="avatar" name="avatar"
                                accept="image/png, image/jpeg" />
                        </p>
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Налаштування профілю</h4>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label asp-for="Name" class="labels">Ім'я</label><input asp-for="Name" type="text"
                                    class="form-control" placeholder="Ім'я" value="@Model.Name">
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Surname" class="labels">Прізвище</label><input asp-for="Surname"
                                    type="text" class="form-control" value="@Model.Surname" placeholder="Прізвище">
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label asp-for="BirthDate" class="labels">Дата народження</label><input
                                    asp-for="BirthDate" type="date" class="form-control" value="@Model.BirthDate.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="col-md-12">
                                <label class="sex" for="signup-sex">Стать</label>
                                <div class="fieldset-sex">
                                    <div class="radio-btns">
                                        <input type="radio" id="male" name="gender" value="1" @((int)Model.Gender==1
                                            ? "checked" : "" ) />
                                        <label>Чоловік</label>
                                    </div>
                                    <div class="radio-btns">
                                        <input type="radio" id="female" name="gender" value="2" @((int)Model.Gender==2
                                            ? "checked" : "" ) />
                                        <label>Жінка</label>
                                    </div>
                                    <div class="radio-btns">
                                        <input type="radio" id="other" name="gender" value="3" @((int)Model.Gender==3
                                            ? "checked" : "" ) />
                                        <label>Інше</label>
                                    </div>
                                    <input asp-for="Gender" class="selectedGender" style="display: none;" />
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="PhoneNumber" id="phone" class="labels">Номер телефону</label><input
                                    asp-for="PhoneNumber" type="phone" class="form-control" placeholder=""
                                    value="@Model.PhoneNumber">
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Email" class="labels">Ел. пошта</label><input asp-for="Email"
                                    type="email" class="form-control" placeholder="example@gmail.com"
                                    value="@Model.Email">
                            </div>
                        </div>
                        <div class="mt-5 text-center">
                            <button class="btn btn-primary profile-button" type="submit">
                                Зберегти
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            <form class="col-md-4" asp-action="ChangePassword">
                <div class="p-3 py-5 change-password-block">
                    <div
                        class="d-flex justify-content-between align-items-center experience font-weight-bold change-pass">
                        <span>
                            Зміна
                            паролю
                        </span>
                    </div><br>
                    <div class="col-md-12">
                        <label asp-for="OldPassword" class="labels">Старий пароль</label>
                        <input asp-for="OldPassword" type="password" class="form-control" placeholder="password"
                            value="@Model.OldPassword">
                    </div>
                    <div class="col-md-12">
                        <label asp-for="NewPassword" class="labels">Новий пароль</label>
                        <input asp-for="NewPassword" type="password" class="form-control" value="">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Повторіть новий пароль</label><input type="password" class="form-control"
                            value="">
                    </div>
                    <div class="col-md-12 btn-save">
                        <button class="btn btn-primary profile-button btn-change" type="submit">Змінити</button>
                    </div>
                    <br>
                </div>
            </form>
        </div>
</div>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script>
    var maskOptions = {
    mask: '+{38} (000)000-00-00',
    lazy: false
} 
var mask = new IMask($('#phone'), maskOptions);
</script>