@using BeautyBooking.Data.Static
@using BeautyBooking.Data.ViewModels;
@using BeautyBooking.Data.Enums;

@model Client;

@{
    ViewData["Title"] = "Особистий кабінет";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css'>
<link rel="stylesheet" type="text/css"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js">
<link rel="stylesheet" type="text/css" href="~/css/account_page_style.css">

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5 profile-picture" width="150px"
                     src="../img/360_F_97000908_wwH2goIihwrMoeV9QF3BW6HtpsVFaNVM.jpg">
                <span class="font-weight-bold">@Model.Surname @Model.Name</span>
                <p class="fieldset avatar">
                        
                </p>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Профіль клієнта</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                            <label asp-for="Name" class="labels">Ім'я</label><input asp-for="Name" type="text" class="form-control"
                                                                                placeholder="Ім'я" value="@Model.Surname" readonly>
                    </div>
                    <div class="col-md-6">
                            <label asp-for="Surname" class="labels">Прізвище</label><input asp-for="Surname" type="text"
                                                                                       class="form-control" value="@Model.Name" placeholder="Прізвище" readonly>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12">
                        <label asp-for="BirthDate" class="labels">Дата народження</label><input asp-for="BirthDate" type="text"
                                                                                                class="form-control" value="@Model.BirthDate.ToString("dd.MM.yyyy")" readonly>
                    </div>
                    <div class="col-md-12">
                        
                        <div class="fieldset-sex">
                            <label class="labels">Стать</label>
                            @switch (Model.Gender)
                            {
                                case Gender.Male:
                                    <label class="gender">Чоловік</label>
                                    break;
                                case Gender.Female:
                                    <label class="gender">Жінка</label>
                                    break;
                                case Gender.Other:
                                    <label class="gender">Інше</label>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="PhoneNumber" class="labels">Номер телефону</label><input asp-for="PhoneNumber" type="phone"
                                                                                                 class="form-control" placeholder="+380991234567" value="@Model.PhoneNumber" readonly>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Email" class="labels">Ел. пошта</label><input asp-for="Email" type="email"
                                                                                      class="form-control" placeholder="example@gmail.com" value="@Model.Email" readonly>
                    </div>
                    <a class="to-history-btn" asp-controller="Clients" asp-action="History" asp-route-id="@Model.Id">Історія візитів</a>
                </div>
                <div class="mt-3 text-center client-btns-container">
                    @if (CurrentUser.User.Equals(UserRole.Client))
                    {
                        <button class="btn btn-primary profile-button"
                            type="button">
                            <a asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a>
                        </button>
                    }
                    else
                    {
                        @if (CurrentUser.User.Equals(UserRole.Admin))
                        {
                            <button class="btn btn-danger"
                            type="button">
                                <a asp-controller="Clients" asp-action="Delete" asp-route-id="@Model.Id">Видалити</a>
                            </button>

                        }

                        <button class="btn btn-outline-info"
                            type="button">
                            <a asp-controller="Clients" asp-action="Index">До всіх клієнтів</a>
                        </button>
                    }
                    
                </div>
            </div>
        </div>
    </div>
</div>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script>
    $(document).ready(function () {
        $('.btn-outline-info').hover(
            function () {
                // Mouse over - change link color to white
                $(this).find('a').css('color', '#ffffff');
            },
            function () {
                // Mouse out - revert link color to its original color
                $(this).find('a').css('color', '#000000');
            }
        );
    });
</script>