@using BeautyBooking.Data.ViewModels;

@model SignInVM;

@{
    ViewData["Title"] = "Вхід";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css'>
<link rel="stylesheet" type="text/css" href="./css/signIn_page_style.css">

<div class="user-modal is-visible">
    <div class="user-modal-container">
        <ul class="switcher">
            <li><a href="#0">Я клієнт</a></li>
            <li><a href="#0">Я майстер</a></li>
        </ul>

        <div id="login">
            <form class="form" asp-action="SignIn">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <p class="fieldset">
                    <label asp-for="Email" class="image-replace email" for="signin-email">Ел. пошта</label>
                    <input asp-for="Email" class="full-width has-padding has-border" id="signin-email" type="email"
                           placeholder="Ел. пошта">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </p>

                <p class="fieldset">
                    <label asp-for="Password" class="image-replace password" for="signin-password">Пароль</label>
                    <input asp-for="Password" class="full-width has-padding has-border" id="signin-password" type="password"
                           placeholder="Пароль">
                    <a href="#0" class="hide-password">Показати</a>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </p>

                <p class="fieldset">
                    <input class="full-width" type="submit" value="Увійти">
                </p>
            </form>

            <a asp-action="Register" class="registerBtn"><p class="form-bottom-message">Зареєструватися</p></a>
        </div>
        <a href="#0" class="close-form">Close</a>
    </div>
</div>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="~/js/signIn_page_script.js"></script>

