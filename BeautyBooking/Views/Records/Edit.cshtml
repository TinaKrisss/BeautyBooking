@using BeautyBooking.Data.ViewModels

@model EditRecordVM

@{
    ViewData["Title"] = "Редагування послуги";
}

<link rel="stylesheet" href="~/css/services_page_style.css">
<link rel="stylesheet" href="~/css/edit_record_page_style.css">

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 details-header>Редагування запису</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" asp-route-recordId="@Model.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="control-label">Клієнт</label>
                        <input class="form-control" value="@Model.ClientSurname @Model.ClientName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Майстер</label>
                        <input class="form-control" value="@Model.MasterSurname @Model.MasterName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Процедури:</label>
                        @foreach (var item in @Model.Services)
                        {
                            <input class="form-control" value=" @item.Name" />     
                        }
                    </div>
                    <div class="form-group">
                        <label class="control-label">Дата і час</label>
                        <input class="form-control" id="datetimeinput" type="datetime-local" value="@Model.DateAndTime.ToString("yyyy-MM-ddTHH:mm")" disabled/>
                    </div>
                    <div class="form-group">
                        <label class="status">Статус</label>
                        <div class="fieldset-status">
                            <div class="radio-btns">
                                <input type="radio" id="notConfirmed" name="status" value="1" @((int)Model.Status==1
                                       ? "checked" : "" ) />
                                <label>Не підтверджено</label>
                            </div>
                            <div class="radio-btns">
                                <input type="radio" id="confirmed" name="status" value="2" @((int)Model.Status==2
                                       ? "checked" : "" ) />
                                <label>Підтверджено</label>
                            </div>
                            <div class="radio-btns">
                                <input type="radio" id="cancelled" name="status" value="3" @((int)Model.Status==3
                                       ? "checked" : "" ) />
                                <label>Скасовано</label>
                            </div>
                            <div class="radio-btns">
                                <input type="radio" id="done" name="status" value="4" @((int)Model.Status==4
                                       ? "checked" : "" ) />
                                <label>Виконано</label>
                            </div>
                            <input asp-for="Status" class="selectedStatus" style="display: none;" />
                        </div>
                    </div>
                    <div class="form-group add-btns">
                        <input type="submit" value="Видалити" asp-action="Delete" class="btn btn-danger btn-delete float-right" />
                        <input type="submit" value="Зберегти" asp-action="Edit" class="btn btn-add float-right" />
                    </div>
                    <div class="form-group add-btns">
                        <a class="btn btn-outline-info btn-cancel" asp-action="Index">Скасувати</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="~/js/edit_record_page_script.js"></script>