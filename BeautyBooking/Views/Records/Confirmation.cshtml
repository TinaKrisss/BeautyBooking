@using BeautyBooking.Data.Enums
@using BeautyBooking.Data.Static;
@using BeautyBooking.Data.ViewModels;

@model ConfirmOrderVM;

@{
    ViewData["Title"] = "Підтвердження запису";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css'>
<link rel="stylesheet" type="text/css"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js">
<link rel="stylesheet" type="text/css" href="~/css/account_page_style.css">
<link rel="stylesheet" type="text/css" href="~/css/masters_page_style.css">

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 border-right master-info">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-center">Вітаємо, ваш запис підтверджено!</h4>
                </div>
                <div style="display: flex; flex-direction: column; text-align: left;">
                    <p class="text-left"><b>Послуги:</b></p>
                    @foreach (var item in Model.Services)
                    {
                        <p class="text-left">@item.Name</p>
                    }
                    <p class="text-left"><b>Майстер:</b> @Model.MasterSurname @Model.MasterSurname</p>
                    <p class="text-left"><b>Загальна тривалість:</b> @Model.Time</p>
                    <p class="text-left"><b>Всього до сплати:</b> @Model.Price</p>
                </div>
                <div class="form-group free-time-btns edit-btn-container">
                    <a class="btn btn-outline-secondary btn-show-all" asp-controller="Services" asp-action="Index">На головну</a>
                </div>
            </div>
        </div>
    </div>
</div>